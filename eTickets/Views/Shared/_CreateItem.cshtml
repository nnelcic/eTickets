@model string;

@if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
{
	<div class="text-white" style="position: fixed; right: 25px; bottom: 25px; z-index: 100;">
	<a class="btn btn-success" 
		asp-controller="@Model" 
		asp-action="Create">
		<i class="bi bi-plus-circle"></i>
		Add New
	</a>
	</div>
}
